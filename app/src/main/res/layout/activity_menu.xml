<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hamburgesa1"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="17sp"
        android:fontFamily="@font/alataregular"
        android:background="@drawable/menulateral"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="3"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_calendario"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/calendario"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_foro"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/foro"
                android:layout_gravity="center"

                />

        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/calendario"
                android:fontFamily="@font/alataregular"
                android:layout_gravity="center"
                />

            <TextView/>

            <TextView
                android:text="@string/foro"
                android:layout_gravity="center"
                android:fontFamily="@font/alataregular"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="35dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_entrenaminto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/entrenamiento"
                android:layout_gravity="center"/>

            <TextView/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_compras"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/articulos"
                android:layout_gravity="center"

                />

        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/entrenamiento"
                android:fontFamily="@font/alataregular"
                android:layout_gravity="center"
                />

            <TextView/>

            <TextView
                android:text="@string/compras"
                android:layout_gravity="center"
                android:fontFamily="@font/alataregular"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="35dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masconta"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/amascota"
                android:layout_gravity="center"/>

            <TextView/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_emergencias"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:fontFamily="@font/alataregular"
                android:background="@drawable/emergencia"
                android:layout_gravity="center"

                />

        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/misMascotas"
                android:fontFamily="@font/alataregular"
                android:layout_gravity="center"
                />

            <TextView/>

            <TextView
                android:text="@string/emergencias"
                android:layout_gravity="center"
                android:fontFamily="@font/alataregular"
                />

        </TableRow>


    </TableLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logofondochico"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"/>

</LinearLayout>